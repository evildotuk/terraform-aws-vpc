+
+  tags = merge(
+    {
+      "Name" = format(
+        "%s-${var.public-network_subnet_suffix}-%s",
+        var.name,
+        element(var.azs, count.index),
+      )
+    },
+    var.tags,
+    var.public-network_subnet_tags,
